<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_texture"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp" >

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/pc_textview"
                android:layout_weight="1"
                android:text="@string/pc_n"
                android:typeface="serif" />

            <EditText
                android:id="@+id/pc_etNVal"
                style="@style/pc_edittext"
                android:layout_weight="2"
                android:hint="@string/n_hint" >
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/pc_textview"
                android:layout_weight="1"
                android:text="@string/pc_r"
                android:typeface="serif" />

            <EditText
                android:id="@+id/pc_etRVal"
                style="@style/pc_edittext"
                android:layout_weight="2"
                android:hint="@string/r_hint" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/pc_ns_title"
                style="@style/pc_textview"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"
                android:text="@string/pc_ns"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/pc_etNVals"
                style="@style/pc_edittext"
                android:digits="0123456789,"
                android:hint="@string/n_vals_hint" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/pc_flFrame"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:layout_weight="5" />

</LinearLayout>